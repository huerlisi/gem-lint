#!/usr/bin/env ruby
# coding: utf-8

$:.unshift(File.dirname(__FILE__) + "/../lib/")

require 'gem_lint'

filename = ARGV.shift
runner = GemLint::Runner.new(filename)
tags = runner.tags

if tags.empty?
  puts "No test failures!"
  puts
  exit 0
else
  puts "#{tags.size} failures"
  tags.each do |tag|
    puts "- #{tag}"
  end
  puts
  exit 1
end
